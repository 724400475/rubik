.spin-circular
  position: relative
  display: inline-flex
  
  &-indeterminate
    svg
      animation: $spin-circular-rotate-animation
      transform-origin: center center
      width: 100%
      height: 100%
      margin: auto
      position: absolute
      top: 0
      bottom: 0
      left: 0
      right: 0
      transition: $process-circular-intermediate-svg-transition
      z-index: 0
      
    .spin-circular-overlay
      animation: $spin-circular-rotate-dash
      stroke-linecap: round
      stroke-dasharray: 1,200
      stroke-dashoffset: 0px
    
  &-underlay
    stroke: $spin-circular-underlay-stroke
    z-index: 1
    
  &-overlay
    stroke: currentColor
    z-index: 2
    transition: $spin-circular-overlay-transition
    
  &-info
    position: absolute
    top: 50%
    left: 50%
    transform: translate3d(-50%, -50%, 0)
    
  @keyframes spin-circular-dash
    0%
      stroke-dasharray: 1,200
      stroke-dashoffset: 0px
    
    50%
      stroke-dasharray: 100,200
      stroke-dashoffset: -15px
    
    100%
      stroke-dasharray: 100,200
      stroke-dashoffset: -125px
      
  @keyframes spin-circular-rotate
    100%
      transform: rotate(360deg)